{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/app.py"
    }
  ],
  "crons": [
    {
      "path": "/scheduled-task",  # Replace with the actual route defined in your app.py
      "schedule": "0 * * * *"  # Runs every hour (minute 0 of every hour)
    }
  ]
}
